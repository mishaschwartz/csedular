<%= form_with model: @location, local: true, class: 'create-update-form' do |f| %>
  <div class='form-input'>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class='form-input'>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= submit_tag %>
  </div>
<% end %>